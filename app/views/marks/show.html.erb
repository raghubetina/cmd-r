<%- model_class = Mark -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @mark.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:selector) %>:</strong></dt>
  <dd><%= @mark.selector %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd>
    <div class="diff">
      <%=  Diffy::Diff.new(@mark.old_content, @mark.content, :include_plus_and_minus_in_html => true).to_s(:html_simple).html_safe %></dd>
    </div>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              marks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mark_path(@mark), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mark_path(@mark),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
